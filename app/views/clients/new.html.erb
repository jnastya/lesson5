<%= form_with(model: @client, local: true, class: 'contact-form') do |form| %>
  <% if @client.errors.any? %>
    <div> id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="col-md-6 ml-auto mr-auto text-center">
          <div class="form-group">
              <label class="bmd-label-floating">Your Name</label>
              <%= form.text_field :name, id: :client_name, class: 'form-control' %>
          </div>
      </div>
  </div>
  <div class="row">
      <div class="col-md-6 ml-auto mr-auto text-center">
          <div class="form-group">
              <label class="bmd-label-floating">Your Last Name</label>
              <%= form.text_field :last_name, id: :client_last_name, class: 'form-control' %>
          </div>
      </div>
  </div>
  <div class="row">
      <div class="col-md-6 ml-auto mr-auto text-center">
          <div class="form-group">
              <label class="bmd-label-floating">Your Email</label>
              <%= form.text_field :email, id: :client_email, class: 'form-control' %>
          </div>
      </div>
  </div>
  <div class="row">
      <div class="col-md-6 ml-auto mr-auto text-center">
          <div class="form-group">
              <label class="bmd-label-floating">Your Phone</label>
              <%= form.text_field :phone, id: :client_phone, class: 'form-control' %>
          </div>
      </div>
  </div>

  <div class="row">
      <div class="col-md-4 ml-auto mr-auto text-center">
          <%= form.submit class: 'btn btn-primary btn-raised'%>
      </div>
  </div>
<% end %>
